<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Orders - Supermarket App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- NAVBAR (same pattern) -->
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav me-auto mb-2 mb-sm-0">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/shopping">Shop</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cart">Cart</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/wishlist">Wishlist</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/orders">My Orders</a>
            </li>
          <% } %>
        </ul>

        <ul class="navbar-nav mb-2 mb-sm-0">
          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <span class="navbar-text me-2">
                Hello, <%= user.username || user.name || user.email || 'User' %>
              </span>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-4">
    <h1 class="mb-3">My Orders</h1>

    <% if (!orders || orders.length === 0) { %>
      <p class="text-muted">You have no orders yet.</p>
      <a href="/shopping" class="btn btn-primary">Start Shopping</a>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total ($)</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(function(order, index) { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= order.id %></td>
              <td><%= order.createdAt || order.date || '-' %></td>
              <td><%= order.total || 0 %></td>
              <td><%= order.status || 'Pending' %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
