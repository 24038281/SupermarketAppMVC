<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Login - Supermarket App</title>
  <style>
    body {
      background: radial-gradient(circle at 20% 20%, #f1f5ff, #f8fbff 35%, #ffffff);
      min-height: 100vh;
      color: #0f172a;
    }
    .auth-wrapper {
      max-width: 420px;
      margin: 48px auto;
    }
    .logo-pill {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 10px 16px;
      border-radius: 999px;
      background: #0d6efd;
      color: #fff;
      text-decoration: none;
      font-weight: 700;
      box-shadow: 0 8px 30px rgba(13,110,253,0.25);
    }
    .logo-pill span.icon {
      display: inline-flex;
      width: 32px;
      height: 32px;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      background: #fff;
      color: #0d6efd;
      font-weight: 800;
    }
    .auth-card {
      border: 1px solid #e5e7eb;
      border-radius: 18px;
      box-shadow: 0 18px 48px rgba(15,23,42,0.06);
      background: #fff;
      padding: 28px 26px 30px;
    }
    .form-control {
      border-radius: 12px;
      padding: 12px 14px;
      border: 1px solid #e5e7eb;
    }
    .btn-primary {
      border-radius: 14px;
      padding: 12px 16px;
      font-weight: 600;
    }
    .ghost-link {
      text-decoration: none;
      font-weight: 600;
      color: #0f172a;
    }
    .ghost-link:hover { text-decoration: underline; }
  </style>
</head>
<body>
  <div class="container">
    <div class="d-flex justify-content-between align-items-center pt-4">
      <a class="logo-pill" href="/">
        <span class="icon">SM</span>
        <span>Supermarket</span>
      </a>
      <div>
        <a href="/shopping" class="ghost-link me-3">Shop</a>
        <a href="/register" class="ghost-link">Register</a>
      </div>
    </div>

    <div class="auth-wrapper">
      <div class="mb-3 text-center">
        <h2 class="fw-bold mb-1">Welcome back</h2>
        <p class="text-muted mb-0">Sign in to continue shopping</p>
      </div>

      <% if (typeof success_msg !== 'undefined' && success_msg) { %>
        <% (Array.isArray(success_msg) ? success_msg : [success_msg]).forEach(function(m){ %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= m %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% }) %>
      <% } %>
      <% if (typeof error_msg !== 'undefined' && error_msg) { %>
        <% (Array.isArray(error_msg) ? error_msg : [error_msg]).forEach(function(m){ %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= m %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% }) %>
      <% } %>

      <div class="auth-card">
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label fw-semibold">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label fw-semibold">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="••••••••" required>
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary w-100">Login</button>
            <a href="/register" class="ghost-link text-center">Create an account</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
