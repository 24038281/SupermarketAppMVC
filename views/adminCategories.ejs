<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Categories</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNavbar">
        <ul class="navbar-nav me-auto mb-2 mb-sm-0">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <% if (user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/shopping">Shop</a>
            </li>
            <% if (user.role === "admin") { %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle active" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                  Admin
                </a>
                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                  <li><a class="dropdown-item" href="/admin/products">Manage Products</a></li>
                  <li><a class="dropdown-item active" href="/admin/categories">Manage Categories</a></li>
                  <li><a class="dropdown-item" href="/admin/suppliers">Manage Suppliers</a></li>
                  <li><a class="dropdown-item" href="/inventory">Inventory Dashboard</a></li>
                  <li><a class="dropdown-item" href="/admin/promocodes">Promo Codes</a></li>
                </ul>
              </li>
            <% } %>
          <% } %>
        </ul>

        <ul class="navbar-nav mb-2 mb-sm-0">
          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <span class="navbar-text me-2">
                Hello, <%= user.username || user.name || user.email || 'Admin' %>
              </span>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-4">
    <h1 class="mb-3">Manage Categories</h1>
    <% if (!categories || categories.length === 0) { %>
      <p class="text-muted">No categories yet. You can implement category CRUD later.</p>
    <% } else { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(function(cat, index) { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= cat.name %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
