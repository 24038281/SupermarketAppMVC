<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Purchase History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body { background:#f7f8fb; }
    .card-shell { background:#fff; border:1px solid #e5e7eb; border-radius:16px; box-shadow:0 12px 28px rgba(15,23,42,0.06); }
    .pill { display:inline-flex; align-items:center; gap:8px; padding:10px 14px; border-radius:999px; background:#e7f1ff; color:#0f172a; font-weight:600; }
    .order-card { border-radius:14px; border:1px solid #e5e7eb; box-shadow:0 8px 20px rgba(15,23,42,0.05); margin-bottom:16px; }
    .order-header { background:#f9fafb; border-bottom:1px solid #e5e7eb; padding:12px 16px; display:flex; justify-content:space-between; align-items:center; }
    .order-body { padding:16px; }
    .table-sm td, .table-sm th { padding:10px 12px; }
  </style>
</head>
<body>
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <div class="pill mb-2">Purchase History</div>
        <h3 class="fw-bold mb-1">Your Orders</h3>
        <p class="text-muted mb-0">Review past purchases and open invoices.</p>
      </div>
      <a href="/shopping" class="btn btn-outline-primary">Back to Shop</a>
    </div>

    <% if (typeof success_msg !== 'undefined' && success_msg) { %>
      <% (Array.isArray(success_msg) ? success_msg : [success_msg]).forEach(function(m){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= m %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% }) %>
    <% } %>
    <% if (typeof error_msg !== 'undefined' && error_msg) { %>
      <% (Array.isArray(error_msg) ? error_msg : [error_msg]).forEach(function(m){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= m %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% }) %>
    <% } %>

    <% if (orders && orders.length) { %>
      <% orders.forEach(function(order){ %>
        <div class="order-card">
          <div class="order-header">
            <div>
              <div class="fw-bold">Invoice #<%= order.id %></div>
              <div class="text-muted small"><%= order.created_at && order.created_at.toLocaleString ? order.created_at.toLocaleString() : order.created_at %></div>
            </div>
            <div class="text-end">
              <div class="text-muted small">Payment method</div>
              <div class="fw-semibold"><%= order.payment_method || 'N/A' %></div>
            </div>
          </div>
          <div class="order-body">
            <div class="table-responsive mb-3">
              <table class="table table-sm align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th style="width:40px;">#</th>
                    <th>Product</th>
                    <th class="text-end">Unit</th>
                    <th class="text-end">Quantity</th>
                    <th class="text-end">Line total</th>
                  </tr>
                </thead>
                <tbody>
                  <% (order.items || []).forEach(function(it, idx){ %>
                    <tr>
                      <td><%= idx + 1 %></td>
                      <td>
                        <div class="d-flex align-items-center gap-2">
                          <% if (it.image) { %>
                            <img src="/images/<%= it.image %>" alt="<%= it.product_name %>" style="width:32px; height:32px; object-fit:contain;">
                          <% } %>
                          <span class="fw-semibold"><%= it.product_name %></span>
                        </div>
                      </td>
                      <td class="text-end">$<%= Number(it.unit_price || 0).toFixed(2) %></td>
                      <td class="text-end"><%= it.quantity %></td>
                      <td class="text-end">$<%= Number(it.line_total || 0).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <div class="row">
              <div class="col-md-6 text-muted small">
                <div class="mb-1">Payment details</div>
                <div>Pay with your saved method.</div>
              </div>
              <div class="col-md-6">
                <div class="d-flex justify-content-between"><span class="fw-semibold">Subtotal</span><span>$<%= Number(order.subtotal || 0).toFixed(2) %></span></div>
                <div class="d-flex justify-content-between"><span class="fw-semibold">Promo</span><span class="text-success">- $<%= Number(order.promo_discount || 0).toFixed(2) %></span></div>
                <div class="d-flex justify-content-between"><span class="fw-semibold">Loyalty</span><span class="text-success">- $<%= Number(order.loyalty_discount || 0).toFixed(2) %></span></div>
                <div class="d-flex justify-content-between mt-2 border-top pt-2"><span class="fw-bold">Total</span><span class="fw-bold">$<%= Number(order.final_total || 0).toFixed(2) %></span></div>
              </div>
            </div>
            <div class="text-end mt-3">
              <a class="btn btn-outline-primary btn-sm" href="/invoice/<%= order.id %>">View invoice</a>
              <a class="btn btn-primary btn-sm ms-2" href="/orders/<%= order.id %>/reorder">Order Again</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="card-shell p-3">
        <p class="text-muted mb-0">No orders yet.</p>
      </div>
    <% } %>
  </div>
</body>
</html>
